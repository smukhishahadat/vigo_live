<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- code created by RetryTech / Skype : RetryTech / Mail = tejash@gmail.com -->
    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context=".view.profile.SettingsActivity">

        <RelativeLayout
            android:id="@+id/lout_header"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/popins_medium"
                android:text="Settings"
                android:textColor="@color/light_white"
                android:textSize="16sp"

                />

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:padding="3dp"
                android:src="@drawable/ic_back"
                android:tint="@color/light_white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimary" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/lout_header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/lout_header"
                android:layout_marginBottom="60dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"

                        >

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/ic_circle"
                            android:tint="@color/colorTheme" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="1.5dp"
                            android:fontFamily="@font/popins_medium"
                            android:gravity="center_vertical"
                            android:text="Account"
                            android:textColor="@color/white"
                            android:textSize="15sp"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_white_corner_15"
                        android:backgroundTint="@color/colorPrimary"
                        android:orientation="vertical"
                        android:paddingVertical="5dp">

                        <LinearLayout
                            android:id="@+id/lout_share_profile"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_marginStart="15dp"
                                android:src="@drawable/ic_share_profile"
                                android:tint="@color/colorTheme" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="1dp"
                                android:fontFamily="@font/popins_reguler"
                                android:gravity="center_vertical"
                                android:text="Share profile"
                                android:textColor="@color/color_text_light"

                                />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lout_mycode"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_marginStart="15dp"
                                android:src="@drawable/ic_qr_code"
                                android:tint="@color/colorTheme" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="1dp"
                                android:fontFamily="@font/popins_reguler"
                                android:gravity="center_vertical"
                                android:text="My QR code"
                                android:textColor="@color/color_text_light"

                                />


                        </LinearLayout>

                        <LinearLayout
                            android:visibility="visible"
                            android:id="@+id/lout_wallet"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_marginStart="15dp"
                                android:src="@drawable/ic_wallet"
                                android:tint="@color/colorTheme" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="1dp"
                                android:fontFamily="@font/popins_reguler"
                                android:gravity="center_vertical"
                                android:text="My wallet"
                                android:textColor="@color/color_text_light"

                                />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lout_verify"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_marginStart="15dp"
                                android:src="@drawable/ic_request_verify"
                                android:tint="@color/colorTheme" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="1dp"
                                android:fontFamily="@font/popins_reguler"
                                android:gravity="center_vertical"
                                android:text="Request verification"
                                android:textColor="@color/color_text_light"

                                />


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"

                        >

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/ic_circle"
                            android:tint="@color/colorTheme" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="1.5dp"
                            android:fontFamily="@font/popins_medium"
                            android:gravity="center_vertical"
                            android:text="General"
                            android:textColor="@color/white"
                            android:textSize="15sp"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lout_privacy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_white_corner_15"
                        android:backgroundTint="@color/colorPrimary"
                        android:orientation="vertical"
                        android:paddingVertical="5dp">

                        <LinearLayout
                            android:id="@+id/lnr_help"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="visible">


                            <ImageView
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_marginStart="15dp"
                                android:src="@drawable/ic_help"
                                android:tint="@color/colorTheme" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="1dp"
                                android:fontFamily="@font/popins_reguler"
                                android:gravity="center_vertical"
                                android:text="Help"
                                android:textColor="@color/color_text_light"

                                />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lnr_term"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_marginStart="15dp"
                                android:src="@drawable/ic_terms_of_use"
                                android:tint="@color/colorTheme" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="1dp"
                                android:fontFamily="@font/popins_reguler"
                                android:gravity="center_vertical"
                                android:text="Terms of use"
                                android:textColor="@color/color_text_light"

                                />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lnr_privacy_policies"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_marginStart="15dp"
                                android:src="@drawable/ic_privacy_policy"
                                android:tint="@color/colorTheme" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="1dp"
                                android:fontFamily="@font/popins_reguler"
                                android:gravity="center_vertical"
                                android:text="Privacy policy"
                                android:textColor="@color/color_text_light"

                                />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lnr_monetize_soon"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            >


                            <ImageView
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_marginStart="15dp"
                                android:src="@drawable/ic_privacy_policy"
                                android:tint="@color/colorTheme" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="1dp"
                                android:fontFamily="@font/popins_reguler"
                                android:gravity="center_vertical"
                                android:text="monetization and advertising (Coming soon)"
                                android:textColor="@color/color_text_light"

                                />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/developer_support"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone">


                            <ImageView
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_marginStart="15dp"
                                android:src="@drawable/ic_privacy_policy"
                                android:tint="@color/colorTheme" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="1dp"
                                android:fontFamily="@font/popins_reguler"
                                android:gravity="center_vertical"
                                android:text="Developer Support"
                                android:textColor="@color/color_text_light"

                                />


                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/lout_logout"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/bg_white_corner_5"
            android:backgroundTint="@color/colorPrimary"
            android:elevation="3dp"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/ic_log_out"
                android:tint="@color/colorTheme" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/popins_medium"
                android:gravity="center_vertical"
                android:letterSpacing=".05"
                android:text="Log Out"
                android:textAllCaps="true"
                android:textColor="@color/colorTheme"
                android:textSize="13sp"

                />

        </LinearLayout>


    </RelativeLayout>

</layout>