    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_corner_10"
        android:backgroundTint="#A9000000"
        android:padding="30dp">

        <ImageView
            android:id="@+id/iv_parent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:src="@drawable/bubble_single"
            android:tint="@color/bubble_tint" />

        <ImageView
            android:id="@+id/iv_child"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:src="@drawable/bubble_single_small"
            android:tint="@color/bubble_tint" />
    </RelativeLayout>
